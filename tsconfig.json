{
    "compilerOptions": {
        "target": "ES2018",
        "module": "ES6",
        "strict": true,
        "noImplicitAny": true,
        "noEmit": true,
        "allowJs": false,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": false,
        "baseUrl": "./src",
        "paths": {
            "~/*": [
                "./*"
            ]
        },
        "typeRoots": [
            "node_modules/@types",
            "node_modules/phaser/types"
        ],
        "types": [
            "phaser"
        ]
    },
    "include": [
        "src/**/*"
    ]
}